<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    >

    <ImageView
        android:id="@+id/bar_2_img1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/zhangdan"/>

    <ImageView
        android:id="@+id/bar_2_img2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/bar_2_img1"
        android:layout_marginLeft="20dp"
        android:src="@drawable/fukuang"/>

    <ImageView
        android:id="@+id/bar_2_img3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/bar_2_img2"
        android:layout_marginLeft="20dp"
        android:src="@drawable/sousuo"/>

    <ImageView
        android:id="@+id/bar_2_img4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/zhaoxiang"/>

</RelativeLayout>